<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff00"
    android:alpha="0.6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nameMagnet"
        android:layout_width="335dp"
        android:layout_height="59dp"
        android:layout_marginTop="44dp"
        android:fontFamily="Montserrat"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Soumyajit Dey"
        android:textAlignment="center"
        android:textSize="30sp"

        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:fontFamily="Montserrat"
        android:gravity="center"

        android:text="Check In:"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/checkIn"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameMagnet" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="Montserrat"

        android:gravity="center"
        android:text=":Checkout"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkIn" />

    <TextView
        android:id="@+id/checkIn"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:textColor="#000000"

        android:fontFamily="Montserrat"
        android:gravity="center"

        android:text="/...Nil.../"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameMagnet" />

    <TextView
        android:id="@+id/checkOut"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:fontFamily="Montserrat"
        android:gravity="center"
        android:text="/...Nil.../"
        android:textColor="#000000"


        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/CheckoutButton"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/btn_background"
        android:fontFamily="Montserrat"
        android:gravity="center"
        android:text="-> Checkout ->"
        android:foregroundGravity="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

